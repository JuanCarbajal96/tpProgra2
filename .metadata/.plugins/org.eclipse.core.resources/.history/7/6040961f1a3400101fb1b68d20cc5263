package ar.edu.ungs.prog2.ticketek;

import java.util.HashSet;

public class Espectaculo {
	
	String nombre;
	HashSet<Funcion> funciones;
	int ventaDeEntradas;
	
	Espectaculo(String nombre){
		this.nombre = nombre;
		this.funciones = new HashSet<>();
	}
	
	void agregarFuncion(String fecha ) {
		
		Funcion funcion = new Funcion(fecha);
		funciones.add(funcion);
	}

	@Override
	public String toString() {
		
		StringBuilder listado = new StringBuilder();
						
		for (Funcion fun : funciones) {
			
			listado.append(fun.toString());
			listado.append(ventaDeEntradas);
			
			
		}
		
		return  listado.toString();
		
		
	}
	public static void main(String[] args) {
		
		Espectaculo esp = new Espectaculo("Airbag");
		
		System.out.println(esp.toString());
		System.out.println("s");
	}
}
