package ar.edu.ungs.prog2.ticketek;

import java.util.ArrayList;

public class Sector {

	String nombre;
	int capacidad;
	int porcentajeAdicional;

	public Sector( String nombre, int capacidad, int porcentajeAdicional) {

		this.nombre = nombre;
		this.capacidad = capacidad;
		this.porcentajeAdicional = porcentajeAdicional;		

	}

	public ArrayList<Sector> agregarSectores(String[] sectores, int[] capacidad, int[] porcentajeAdicional) {

		ArrayList<Sector> sectoresDeSede = new ArrayList<>();
		
		for (int i = 0; i < sectores.length; i++) {

			Sector sector = new Sector(sectores[i],capacidad[i],porcentajeAdicional[i]);
			
			sectoresDeSede.add(sector);

		}
		
		return sectoresDeSede;
	}
}
